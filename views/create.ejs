<% include header.html %>

<div id='mycontainer' class="container">
      <form class="col-sm-offset-4 col-sm-4 form-horizontal" role="form" method="post">
          <fieldset>
              <legend>User login</legend>
              <%- message%>
              <div class="form-group">
                  <label class="col-sm-3 control-label" for="eventname">Event Name</label>
                  <div class="col-sm-9">
                      <input type="text" class="form-control" id="eventname" name="eventname" placeholder="Eventname" required>
                 </div>
             </div>
             <div class="form-group">
                 <label class="col-sm-3 control-label" for="members">Members</label>
                 <div class="col-sm-9">
                     <input type="text" class="form-control" id="members" name="members" placeholder="Members" required>
                 </div>
             </div>
              <div class="form-group">
                 <label class="col-sm-3 control-label" for="moneys">Money paid situation</label>
                 <div class="col-sm-9">
                     <input type="text" class="form-control" id="moneys" name="moneys" placeholder="Moneys" required>
                 </div>
             </div>
             <div class="form-group">
                 <div class="col-sm-offset-3 col-sm-9">
                     <button type="submit" class="btn btn-primary">Submit</button>
                 </div>
             </div>
         </fieldset>
     </form>
 </div>
